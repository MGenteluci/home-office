<html>
    <head>
        <title>Home Office Schedule</title>
        <link rel="stylesheet" href="/assets/main.css"/>
        <link rel="stylesheet" href="/assets/homeOffices.css"/>
    </head>
    <body>
    <div id="container">
        <table>
            <thead>
                <tr>
                    <th class="thName">Nome</th>
                    <th class="thDay">Dia</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < homeOffices.length; i++) {%>
                    <tr>
                        <td><%= homeOffices[i].name %></td>
                        <td><%= homeOffices[i].day %></td>
                        <td><a class="remove" href='/homeOffices/delete/<%=homeOffices[i].id%>'>REMOVER</a></td>
                    </tr>  
                <%}%>
            </tbody>
        </table>
        <h3>Adicionar novo Home Office</h3>
        <form action="/homeOffices" method="POST">
            <div>
                <select name="name" required>
                    <option value="">Selecionar Funcionário</option>
                    <option value="Daniel Medina">Daniel Medina</option>
                    <option value="Luan Almeida">Luan Almeida</option>
                    <option value="Raphael Mendonça">Raphael Mendonça</option>
                    <option value="Vitor">Vitor</option>
                    <option value="Vinicius">Vinicius</option>
                </select>
            </div>
            <div>
                <input type="date" name="day" required/>
            </div>
            <input type="submit" value="Salvar"/>
        </form>
    </div>
    </body>
</html>