<html>
    <head>
        <title>Home Office Schedule</title>
        <link rel="stylesheet" href="/assets/main.css"/>
        <link rel="stylesheet" href="/assets/homeOffices.css"/>
    </head>
    <body>
    <div id="container">
        <table>
            <thead>
                <tr>
                    <th class="thName">Nome</th>
                    <th class="thDay">Dia</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < homeOffices.length; i++) {%>
                    <tr>
                        <td><%= homeOffices[i].name %></td>
                        <td>
                            <%= 
                            homeOffices[i].day.getDate() + 
                            "/" + (homeOffices[i].day.getMonth()+1) +
                            "/" +  homeOffices[i].day.getFullYear()
                            %>
                        </td>
                        <td><a class="remove" href='/homeOffices/delete/<%=homeOffices[i].id%>'>REMOVER</a></td>
                    </tr>  
                <%}%>
            </tbody>
        </table>
        <h3>Adicionar novo Home Office</h3>
        <ul>
            <% if(error.length > 0) { %>
                <li><%= error %></li>
            <% } %>
        </ul>
        <form action="/homeOffices" method="POST">
            <div>
                <select name="name" required>
                    <% for(var i = 0; i < users.length; i++) { %>
                        <option value="<%= users[i].name %> <%= users[i].surname %>">
                            <%= users[i].name %> <%= users[i].surname %>
                        </option>
                    <% } %>
                </select>
            </div>
            <div>
                <input type="date" name="day" required/>
            </div>
            <input type="submit" value="Salvar"/>
        </form>
    </div>
    </body>
</html>